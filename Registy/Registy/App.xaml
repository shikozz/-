<Application x:Class="Registy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Registy"
             StartupUri="Registration.xaml">
    <Application.Resources>

        <Style TargetType="Button" x:Key="RoundButton">
            <Setter Property="Background" Value="#EAFDFC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="#EAFDFC"/>
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>



        <Style TargetType="TextBox" x:Key="RoundBox">
            <Setter Property="Background" Value="#EAFDFC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="#EAFDFC"/>
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>


    </Application.Resources>
</Application>
